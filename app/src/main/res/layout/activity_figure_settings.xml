<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FigureSettingsActivity">

    <ScrollView
        android:id="@+id/figureSettingScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/figure_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/with_what_text"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/consola"
                android:text="@string/with_what_text"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/with_sideA_checkbox"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="54dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/consolai"
                android:textSize="24sp"
                android:text="@string/sideA" />

            <CheckBox
                android:id="@+id/with_sideB_checkbox"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="54dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/consolai"
                android:textSize="24sp"
                android:text="@string/sideB" />

            <CheckBox
                android:id="@+id/with_sideC_checkbox"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="54dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/consolai"
                android:textSize="24sp"
                android:text="@string/sideC" />

            <CheckBox
                android:id="@+id/with_sideD_checkbox"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="54dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/consolai"
                android:textSize="24sp"
                android:text="@string/sideD" />

            <CheckBox
                android:id="@+id/with_radius_checkbox"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/consolai"
                android:textSize="24sp"
                android:layout_marginStart="54dp"
                android:layout_marginTop="6dp"
                android:text="@string/radius" />

            <CheckBox
                android:id="@+id/with_perimeter_checkbox"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="54dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/consolai"
                android:textSize="24sp"
                android:text="@string/perimeter" />

            <CheckBox
                android:id="@+id/with_area_checkbox"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="54dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/consolai"
