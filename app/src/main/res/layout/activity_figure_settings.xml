            <CheckBox
                android:id="@+id/find_median_checkbox"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/consolai"
                android:textSize="24sp"
                android:layout_marginStart="54dp"
                android:layout_marginTop="6dp"
                android:text="@string/median" />

            <TextView
                android:id="@+id/other_settings_text"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/consola"
                android:text="@string/other_settings_text"
                android:textSize="24sp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp" />

            <CheckBox
                android:id="@+id/equilateral_checkbox"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/consolai"
                android:text="@string/equilateral"
                android:textSize="24sp"
                android:layout_marginStart="54dp"
                android:layout_marginTop="6dp" />

            <CheckBox
                android:id="@+id/isosceles_checkbox"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/consolai"
                android:text="@string/isosceles"
                android:textSize="24sp"
                android:layout_marginStart="54dp"
                android:layout_marginTop="6dp" />

            <CheckBox
                android:id="@+id/rectangular_checkbox"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/consolai"
                android:text="@string/rectangular"
                android:textSize="24sp"
                android:layout_marginStart="54dp"
                android:layout_marginTop="6dp" />

            <View
                android:id="@+id/parseScroll"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/count_btn"
        style="@style/AppButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/consola"
        android:text="@string/count_btn_text"
        android:textSize="24sp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

