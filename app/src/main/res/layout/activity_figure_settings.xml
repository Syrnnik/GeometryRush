                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/consolai"
                android:textSize="24sp"
                android:layout_marginStart="54dp"
                android:layout_marginTop="6dp"
                android:text="@string/sideA" />

            <CheckBox
                android:id="@+id/find_sideB_checkbox"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/consolai"
                android:textSize="24sp"
                android:layout_marginStart="54dp"
                android:layout_marginTop="6dp"
                android:text="@string/sideB" />

            <CheckBox
                android:id="@+id/find_sideC_checkbox"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="54dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/consolai"
                android:textSize="24sp"
                android:text="@string/sideC" />

            <CheckBox
                android:id="@+id/find_sideD_checkbox"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="54dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/consolai"
                android:textSize="24sp"
                android:text="@string/sideD" />

            <CheckBox
                android:id="@+id/find_radius_checkbox"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/consolai"
                android:textSize="24sp"
                android:layout_marginStart="54dp"
