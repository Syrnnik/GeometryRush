                android:layout_marginStart="24dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/areaOutput"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/consola"
                android:textSize="24sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/volumeOutput"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/consola"
                android:textSize="24sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/diagonalOutput"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/consola"
                android:textSize="24sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/heightOutput"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/consola"
                android:textSize="24sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/medianOutput"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/consola"
                android:textSize="24sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/radiusOutput"
                style="@style/AppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/consola"
                android:textSize="24sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="2dp"
